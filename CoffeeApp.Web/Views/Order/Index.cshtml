@model CoffeeApp.Domain.Entities.Order
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
}
<script type="text/javascript" src="../../Scripts/jquery.validate.min.js"></script>
<script type="text/javascript" src="../../Scripts/jquery.validate.unobtrusive.min.js"></script>
@using (Html.BeginForm("Index", "Order"))
{
    <table>
        <tr>
            <td>@Html.LabelFor(m => m.Name)
            </td>
        </tr>
        <tr>
            <td>@Html.EditorFor(m => m.Name)
            </td>
            <td>@Html.ValidationMessageFor(m => m.Name)
            </td>
        </tr>
        <tr>
            <td>@Html.LabelFor(m => m.Address)
            </td>
        </tr>
        <tr>
            <td>@Html.EditorFor(m => m.Address)
            </td>
            <td>@Html.ValidationMessageFor(m => m.Address)
            </td>
        </tr>
        <tr>
            <td>@Html.LabelFor(m => m.PhoneNumber)
            </td>
        </tr>
        <tr>
            <td>@Html.EditorFor(m => m.PhoneNumber)
            </td>
            <td>@Html.ValidationMessageFor(m => m.PhoneNumber)
            </td>
        </tr>
        <tr>
            <td><input type="submit" /></td>
        </tr>
    </table>
}